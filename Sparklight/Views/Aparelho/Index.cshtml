@model IEnumerable<Sparklight.Domain.Entities.Aparelho>

@{
    ViewData["Title"] = "Lista de Aparelhos";
}

<h1>@ViewData["Title"]</h1>

<a asp-action="Create" class="btn btn-primary mb-3">Novo Aparelho</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Potência (W)</th>
            <th>Tempo (horas)</th>
            <th>Período</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var aparelho in Model)
        {
            <tr>
                <td>@aparelho.Nome</td>
                <td>@aparelho.Potencia</td>
                <td>@aparelho.Tempo</td>
                <td>@aparelho.Periodo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@aparelho.AparelhoId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@aparelho.AparelhoId" class="btn btn-danger btn-sm">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
