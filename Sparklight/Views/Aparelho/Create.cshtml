@model Sparklight.Domain.Entities.Aparelho

@{
    ViewData["Title"] = "Cadastrar Aparelho";
}

<h1>@ViewData["Title"]</h1>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-3">
                <div class="card-header bg-success text-white text-center">
                    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
                    <h4>@ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div class="mb-4">
                            <label asp-for="Nome" class="form-label">Nome do Aparelho</label>
                            <input asp-for="Nome" class="form-control" placeholder="Ex.: Geladeira, Micro-ondas" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Potencia" class="form-label">Potência (W)</label>
                            <input asp-for="Potencia" class="form-control" type="number" step="0.01" placeholder="Ex.: 1200" />
                            <span asp-validation-for="Potencia" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Tempo" class="form-label">Tempo de Uso Diário (horas)</label>
                            <input asp-for="Tempo" class="form-control" type="number" placeholder="Ex.: 5" />
                            <span asp-validation-for="Tempo" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Periodo" class="form-label">Período</label>
                            <input asp-for="Periodo" class="form-control" placeholder="Ex.: Mensal, Diário" />
                            <span asp-validation-for="Periodo" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary px-4 py-2">
                                <i class="bi bi-save"></i> Salvar
                            </button>
                            <a asp-controller="Home" asp-action="Dashboard" class="btn btn-outline-secondary px-4 py-2">
                                <i class="bi bi-arrow-left"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
