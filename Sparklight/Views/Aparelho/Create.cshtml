@model Sparklight.Domain.Entities.Aparelho

@{
    ViewData["Title"] = "Cadastrar Aparelho";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome do Aparelho</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Potencia" class="control-label">Potência (W)</label>
                <input asp-for="Potencia" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Potencia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Tempo" class="control-label">Tempo de Uso Diário (horas)</label>
                <input asp-for="Tempo" class="form-control" type="number" />
                <span asp-validation-for="Tempo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Periodo" class="control-label">Período</label>
                <input asp-for="Periodo" class="form-control" />
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-success">Salvar</button>
                <a asp-action="Dashboard" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
