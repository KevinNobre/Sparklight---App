@model Sparklight.Domain.Entities.Aparelho

@{
    ViewData["Title"] = "Detalhes do Aparelho";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.AparelhoId</dd>

            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>

            <dt class="col-sm-3">Potência</dt>
            <dd class="col-sm-9">@Model.Potencia W</dd>

            <dt class="col-sm-3">Tempo de Uso</dt>
            <dd class="col-sm-9">@Model.Tempo horas/dia</dd>

            <dt class="col-sm-3">Período</dt>
            <dd class="col-sm-9">@Model.Periodo</dd>
        </dl>
    </div>
</div>

<div class="form-group text-center mt-3">
    <a asp-action="Edit" asp-route-id="@Model.AparelhoId" class="btn btn-primary">Editar</a>
    <a asp-action="Delete" asp-route-id="@Model.AparelhoId" class="btn btn-danger">Excluir</a>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</div>
