@model Sparklight.Domain.Entities.Aparelho

@{
    ViewData["Title"] = "Editar Aparelho";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="AparelhoId" />

            <!-- Nome do Aparelho -->
            <div class="form-group">
                <label asp-for="Nome" class="form-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <!-- Potência -->
            <div class="form-group">
                <label asp-for="Potencia" class="form-label"></label>
                <input asp-for="Potencia" class="form-control" />
                <span asp-validation-for="Potencia" class="text-danger"></span>
            </div>

            <!-- Tempo de Uso -->
            <div class="form-group">
                <label asp-for="Tempo" class="form-label"></label>
                <input asp-for="Tempo" class="form-control" />
                <span asp-validation-for="Tempo" class="text-danger"></span>
            </div>

            <!-- Período -->
            <div class="form-group">
                <label asp-for="Periodo" class="form-label"></label>
                <select asp-for="Periodo" class="form-select">
                    <option value="Diurno">Diurno</option>
                    <option value="Noturno">Noturno</option>
                    <option value="Integral">Integral</option>
                </select>
                <span asp-validation-for="Periodo" class="text-danger"></span>
            </div>

            <!-- Botões -->
            <div class="form-group text-center mt-3">
                <button type="submit" class="btn btn-primary">Salvar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <!-- Adicionar validações client-side -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
