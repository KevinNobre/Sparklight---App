@{
    ViewData["Title"] = "Sparklight";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8">  
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sparklight - Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #124837;
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
        }

        .login-container {
            max-width: 400px;
            margin: 0 auto;
            padding: 30px;
            text-align: center;
        }

        .title {
            color: #ffc107; /* Amarelo */
            font-weight: bold;
        }

        .subtitle {
            color: #ffffff;
            font-size: 24px;
        }

        .btn-custom {
            background-color: #ffc107;
            color: #000;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-size: 16px;
            width: 100%;
        }

            .btn-custom:hover {
                background-color: #e6b806;
            }

        .form-control {
            border-radius: 8px;
            border: 1px solid #fff;
            background-color: transparent;
            color: #fff;
        }

            .form-control:focus {
                box-shadow: none;
                border-color: #ffc107;
            }

        a {
            color: #ffffff;
            text-decoration: none;
        }

        .footer-img {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <h1 class="title">Sparklight</h1>
        <p class="subtitle">Trazendo <span style="color: #ffc107;">consciência</span> para o seu espaço</p>


        <form method="post" action="/Home/Login">
            <div class="mb-3">
                <input type="email" class="form-control" placeholder="Email" name="Email" required />
            </div>
            <div class="mb-3">
                <input type="password" class="form-control" placeholder="Password" name="Password" required />
            </div>
            <div class="text-start">
                <a href="#" style="color: #ffc107;"><a asp-action="Registro">Registrar-se</a>
            </div>
            <button type="submit" class="btn btn-custom mt-3"><a asp-controller="Dashboard" asp-action="Dashboard">Login</a></button>
        </form>

        
        <div class="footer-img">
            <img src="~/images/Figura01.png" alt="Ilustração" class="img-fluid" />
        </div>
    </div>
</body>
</html>
