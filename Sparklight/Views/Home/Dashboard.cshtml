@model IEnumerable<Sparklight.Domain.Entities.Aparelho>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-container">
    <!-- Header -->
    <div class="header">
        <img src="/images/Giselle.png" alt="Avatar" class="avatar">
        <h1>Sparklight ⚡</h1>
        <p>Iluminando o caminho para um consumo consciente</p>
    </div>

    <!-- Billing Information -->
    <div class="billing-info">
        <p class="bill-title">Valor atual da sua fatura</p>
        <h2>R$ 90,00</h2>
        <p class="bill-saving">Você já economizou <span>R$ 72,59</span></p>
        <small>Venc.: 10 dez</small>
    </div>

    <!-- Consumption Information -->
    <div class="consumption-info">
        <h3>Informações de Consumo</h3>
        <a href="@Url.Action("Create", "Aparelho")" class="add-button">+ Add</a>

        <!-- Consumption List -->
        <table class="consumption-table">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Consumo</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var aparelho in Model)
                {
                    <tr>
                        <td>@aparelho.Nome</td>
                        <td>@aparelho.Potencia kWh/dia</td>
                        <td>
                            <a href="@Url.Action("Edit", "Aparelho", new { id = aparelho.AparelhoId })" class="edit-button">✏️</a>
                            <a href="@Url.Action("Delete", "Aparelho", new { id = aparelho.AparelhoId })" class="delete-button">🗑️</a>
                            <a href="@Url.Action("Details", "Aparelho", new { id = aparelho.AparelhoId })" class="details-button">👁️</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
